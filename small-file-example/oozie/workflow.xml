<?xml version="1.0" encoding="UTF-8"?>

<workflow-app xmlns="uri:oozie:workflow:0.2" name="handle-file-landing">
	<start to="move-files-to-staging"/>

	<action name="move-files-to-staging">
		<fs>
            <move source="${nameNode}/user/${wf:user()}/${landingDir}/*" target="/user/${wf:user()}/${stagingDir}" />
        </fs>
		<ok to="create-external-table" />
		<error to="fail" />
	</action>

	<action name="create-external-table">
		<hive xmlns="uri:oozie:hive-action:0.2">
			<job-tracker>${jobTracker}</job-tracker>
			<name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <script>create_external_table.q</script>
        	<param>STAGING=/user/${wf:user()}/${stagingDir}</param>
		</hive>		
		<ok to="dump-to-managed-orc-table" />
		<error to="fail" />
	</action>

	<action name="dump-to-managed-orc-table">
		<hive xmlns="uri:oozie:hive-action:0.2">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <configuration>
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
            </configuration>
            <script>dump_to_orc.q</script>
        </hive>
		<ok to="move-files-to-storage" />
		<error to="fail" />
	</action>

	<action name="move-files-to-storage">
		<fs>
            <move source="${nameNode}/user/${wf:user()}/${stagingDir}/*" target="/user/${wf:user()}/${storageDir}" />
        </fs>
		<ok to="end" />
		<error to="fail" />
	</action>
	
	<kill name="fail">
        <message>error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>

	<end name="end"/>
</workflow-app>
